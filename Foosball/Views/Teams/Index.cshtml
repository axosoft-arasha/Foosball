@model List<Foosball.Entities.Team>

<table id="teamsTable" class="row-border" cellspacing="0">
	<thead>
		<tr>
			<th></th>
			<th>Location</th>
			<th>Name</th>
			<th>Division</th>
		</tr>
	</thead>
</table>

<script type="text/javascript">
	$(document).ready(function () {
		$('#teamsTable').dataTable({
			"ajax": _rootDir + 'teams/listdata',
			paging: false,
			info: false,
			order: [1, 'asc'],
			columns: [
				{ data: 'ImageUrl' },
				{ data: 'Location' },
				{ data: 'Name' },
				{ data: 'Division' }
			],
			columnDefs: [
				{
					targets: 0,
					render: function (data, type, row) {
						return '<img src="' + data + '"/>';
					}
				}
			]
		});
	});
</script>
